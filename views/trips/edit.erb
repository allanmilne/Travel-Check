<h2>Edit <%= @trip.name %></h2>

<div>
  <form method="post" action="/trips/<%= @trip.id %>">
    <!-- input trip name box -->
    <label for="trip-name">Trip Name:</label>
    <input type="text" name="name" id="trip-name" value="<%= @trip.name %>" >
    <!-- drop down city list -->
    <label for="city-id">City Name:</label>
    <select id="city-id" name="city_id">
      <% for city in @cities %>
      <option value="<%= city.id %>" >
      <%= city.name %> </option>
      <% end %>
    </select>
    <!-- drop down visited option -->
    <label for="visited">Visited:</label>
    <select id="visited" name="visited">
      <option value="false"selected>False</option>
      <option value="true">True</option>
    </select>
    <!-- submit button -->
    <input type="submit" value="Submit">
  </form>
</div>
