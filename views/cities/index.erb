<h2>Cities</h2>
<table>
  <tr>
    <th>City</th>
    <th>Country</th>
  </tr>
  <% for city in @cities %>
  <tr>
    <td><a href="/cities/<%=city.id%>"><%= city.name %></a></td>
    <td><%= city.country.name %></td>
  </tr>
  <% end %>
</table>

<br />

<div>
  <a href="/cities/new">Add City</a>
</div>
